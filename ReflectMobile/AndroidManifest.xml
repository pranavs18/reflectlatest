<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reflectmobile"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activity.LoginActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.reflectmobile.activity.BaseActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.reflectmobile.activity.BaseActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CommunitiesActivity"
            android:configChanges="orientation"
            android:icon="@drawable/action_bar_icon_logo"
            android:label="@string/title_activity_network"
            android:parentActivityName="com.reflectmobile.activity.BaseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomActionBarTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.reflectmobile.activity.BaseActivity" />
        </activity>
        <activity
            android:name=".activity.CommunityActivity"
            android:configChanges="orientation"
            android:icon="@drawable/action_bar_icon_logo"
            android:label="@string/title_activity_community"
            android:parentActivityName="com.reflectmobile.activity.BaseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomActionBarTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.reflectmobile.activity.BaseActivity" />
        </activity>
        <activity
            android:name=".activity.MomentActivity"
            android:configChanges="orientation"
            android:icon="@drawable/action_bar_icon_logo"
            android:label="@string/title_activity_moment"
            android:parentActivityName="com.reflectmobile.activity.BaseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomActionBarTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.reflectmobile.activity.BaseActivity" />
        </activity>
        <activity
            android:name=".activity.PhotoActivity"
            android:configChanges="orientation"
            android:icon="@drawable/action_bar_icon_logo"
            android:label="@string/title_activity_moment"
            android:parentActivityName="com.reflectmobile.activity.BaseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomActionBarTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.reflectmobile.activity.BaseActivity" />
        </activity>
        <activity
            android:name=".activity.TagActivity"
            android:configChanges="orientation"
            android:icon="@drawable/action_bar_icon_logo"
            android:label="@string/title_activity_tag"
            android:parentActivityName="com.reflectmobile.activity.BaseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomActionBarTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.reflectmobile.activity.BaseActivity" />
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>