<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_bar"
        android:drawableLeft="@drawable/action_bar_icon_logo"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="@string/new_moment"
        android:textColor="@color/yellow"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignBottom="@+id/edittext_container"
            android:layout_alignLeft="@+id/edittext_container"
            android:layout_alignRight="@+id/edittext_container"
            android:layout_alignTop="@+id/edittext_container"
            android:adjustViewBounds="true"
            android:background="@drawable/bg"
            android:contentDescription="@string/background"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/edittext_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="42dp"
                android:background="@color/white" >

                <EditText
                    android:id="@+id/moment_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/apptheme_edit_text_holo_light"
                    android:ems="10"
                    android:hint="@string/name"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/container"
        android:background="@color/white" >

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/cross_active"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="30dp"
            android:paddingTop="8dp"
            android:text="@string/cancel"
            android:textColor="@color/green"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/green" />

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/tick_disabled"
            android:drawablePadding="8dp"
            android:enabled="false"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="30dp"
            android:paddingTop="8dp"
            android:text="@string/save"
            android:textColor="@color/dark_gray"
            android:textSize="14sp"
            android:textStyle="bold" >
        </Button>
    </LinearLayout>

</RelativeLayout>